{
  "name": "js13k-2018",
  "version": "1.0.0",
  "description": "A game",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config ./config/webpack.prod.js && node ./script/ci/check-size.js",
    "clean": "rimraf -- dist",
    "deploy": "./script/deploy.sh",
    "format": "prettier --config .prettierrc.json --write \"@(src|config|script)/**/*@(js|jsx|ts|json)\" \".prettierrc.json\" \"package.json\"",
    "format:check": "prettier-check --list-different \"@(src|config|script)/**/*@(js|jsx|ts|json)\" \".prettierrc.json\" \"package.json\"",
    "lint": "tslint --project .",
    "lint:fix": "tslint --fix --project .",
    "serve": "webpack-dev-server --config ./config/webpack.dev.js --hot",
    "serve:prod": "npm run build && http-server dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/irlbayarea/js13k-2018.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/irlbayarea/js13k-2018/issues"
  },
  "homepage": "https://github.com/irlbayarea/js13k-2018#readme",
  "sideEffects": false,
  "devDependencies": {
    "app-root-path": "^2.1.0",
    "git-revision-webpack-plugin": "^3.0.3",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "prettier": "^1.14.0",
    "prettier-check": "^2.0.0",
    "rimraf": "^2.6.2",
    "terser-webpack-plugin": "^1.0.0",
    "ts-loader": "^4.4.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-eslint-rules": "^5.3.1",
    "typescript": "^2.9.2",
    "webpack": "^4.16.4",
    "webpack-cli": "^3.1.0",
    "webpack-dev-server": "^3.1.5",
    "webpack-merge": "^4.1.4",
    "zip-webpack-plugin": "^3.0.0"
  }
}
